            <div class="info">
              <h1>Indonesia</h1>
              <p>
                Land of the thousand islands
              </p>
              <button>Discover</button>
            <% end %>
            </div>
        </div>
      </div>

      <div class="card-group hp">
        <div class="card last hiden">
          <%= link_to "/thailand", class: "image-link" do %>
            <%= image_tag "https://res.cloudinary.com/dbir145pd/image/upload/v1711826475/thailande5_ycltso.jpg" %>
            <div class="layer"></div>
            <div class="info">
              <h1>Thailand</h1>
              <p>
                Land of smiles
              </p>
