<%= render 'components/navbar' %>

<div class="wrapper">
  <div class="banner-hp-imp">
    <%= render 'components/banner' %>
  </div>
  <div class="collection-block-hp">
    <div class="main-container">

      <div class="div-empower-team first">
        <h1>Southeast Asia collection</h1>
      </div>

      <div class="card-group hp">
